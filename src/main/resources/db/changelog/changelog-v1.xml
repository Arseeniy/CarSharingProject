<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="Arseniy">

        <!--        VEHICLE TABLE-->
        <createTable tableName="vehicle_library">
            <column name="id" type="serial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="state_number" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="vehicle_model" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="fuel_amount" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="distance_for_vehicle" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="bool">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!--        FARE TABLE-->
        <createTable tableName="fare_library">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="vehicle_model" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="minute_price" type="double precision">
                <constraints nullable="false"/>
            </column>
            <column name="hour_price" type="double precision">
                <constraints nullable="false"/>
            </column>
            <column name="day_price" type="double precision">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!--        USERS TABLE-->
        <createTable tableName="users_library">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="birth_date" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="user_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(255)">
            </column>
            <column name="passport_details" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="current_vehicle" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <!--        ROLES TABLE-->
        <createTable tableName="roles">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(20)">
            </column>
        </createTable>

        <!--         POPULATE ROLES-->
        <insert tableName="roles">
            <column name="id" value="1"/>
            <column name="name" value="ROLE_USER"/>
        </insert>

        <insert tableName="roles">
            <column name="id" value="2"/>
            <column name="name" value="ROLE_SUPPORT"/>
        </insert>

        <insert tableName="roles">
            <column name="id" value="3"/>
            <column name="name" value="ROLE_ADMIN"/>
        </insert>

        <!--        USER_ROLES TABLE-->
        <createTable tableName="user_roles">
            <column name="user_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="role_id" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
